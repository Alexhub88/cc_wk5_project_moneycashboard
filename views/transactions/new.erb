<form class="" action="/transactions" method="post">

  <label for="merchant_select">Merchant:  </label>
  <select id="merchant_select" name="merchant_id" >
    <% @merchants.each do |merchant| %>
        <option value="<%= merchant.id %>"><%= merchant.name.capitalize %></option>
    <% end %>
  </select>

  <label for ="transaction-value">Value:  </label>
  <input type = "number" name = "value" >

    <label for="tag_select">Tag Type:  </label>
    <select id="tag_select" name="tagtype_id" >
      <% @tagtypes.each do |tagtype| %>
          <option value="<%= tagtype.id %>"><%= tagtype.type.capitalize %></option>
      <% end %>
    </select>

  <label for ="transaction-date">Date:  </label>
  <input type = "date" name = "date" >

  <input type = "submit" value = "Create New Transaction">

</form>
