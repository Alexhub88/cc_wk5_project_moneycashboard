<form class="" action="/transactions" method="post">

  <label for ="">Merchant Name:  </label>
  <input type = "text" name = "merchant_name">

  <label for ="">Value:  </label>
  <input type = "number" name = "value" >

    <label for="tag_select">Select Tag:</label>
    <select name="tag_id" id="tag_select">
      <% @tags.each do |tag| %>
          <option value="<%= tag.id %>"><%= tag.type.capitalize %></option>
      <% end %>
    </select>


  <input type = "submit" value = "Create New Transaction">

</form>
